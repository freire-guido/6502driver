{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "assemble",
            "type": "shell",
            "command": "dasm ${fileBasename} -R  -f3 -v5 -o${fileBasenameNoExtension}.bin",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "presentation": {
                "reveal": "silent",
            }
        },
        {
            "label": "assemble and dump",
            "type": "shell",
            "command": "dasm ${fileBasename} -R -f3 -o${fileBasenameNoExtension}.bin && hexdump -C ${fileBasenameNoExtension}.bin > ${fileBasenameNoExtension}.txt",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
            }
        }
    ]
}